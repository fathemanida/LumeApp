<div class="sidebar">
    <div class="sidebar-title">My Account</div>
    <div class="sidebar-nav">
        <a href="/profile" class="nav-link <%= currentPage === 'profile' ? 'active' : '' %>">
            <i class="fas fa-user"></i>
            Profile
        </a>
        <a href="/wallet" class="nav-link <%= currentPage === 'wallet' ? 'active' : '' %>">
            <i class="fas fa-wallet"></i>
            Wallet
        </a>
        <a href="/address" class="nav-link <%= currentPage === 'address' ? 'active' : '' %>">
            <i class="fas fa-map-marker-alt"></i>
            Address
        </a>
        <a href="/orders" class="nav-link <%= currentPage === 'orders' ? 'active' : '' %>">
            <i class="fas fa-box-open"></i>
            Orders
        </a>
        <a href="/wishlist" class="nav-link <%= currentPage === 'wishlist' ? 'active' : '' %>">
            <i class="fas fa-heart"></i>
            Wishlist
        </a>
    </div>
    <div class="sidebar-actions">
        <button class="logout-btn" onclick="window.location.href='/logout'">
            <i class="fas fa-sign-out-alt"></i>
            Logout
        </button>
        <button class="delete-btn" id="deleteAccountBtn">
            <i class="fas fa-trash-alt"></i>
            Delete Account
        </button>
    </div>
    
    <!-- Delete Confirmation Modal -->
    <div id="deleteAccountModal" class="modal" style="display: none;">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h3>Delete Your Account</h3>
            <p>Are you sure you want to delete your account? This action cannot be undone and all your data will be permanently removed.</p>
            <div class="modal-actions">
                <button id="confirmDelete" class="btn btn-danger">Yes, Delete My Account</button>
                <button id="cancelDelete" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
    </div>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('deleteAccountModal');
        const btn = document.getElementById('deleteAccountBtn');
        const span = document.getElementsByClassName('close')[0];
        const cancelBtn = document.getElementById('cancelDelete');
        
        btn.onclick = function() {
            modal.style.display = 'block';
        }
        
        span.onclick = function() {
            modal.style.display = 'none';
        }
        
        // Close modal when cancel button is clicked
        cancelBtn.onclick = function() {
            modal.style.display = 'none';
        }
        
        // Close modal when clicking outside the modal
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }
        
        // Handle account deletion
        document.getElementById('confirmDelete').addEventListener('click', async function() {
            try {
                const response = await fetch('/delete-account', {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Show success message with Toastify
                    Toastify({
                        text: 'Your account has been successfully deleted.',
                        duration: 3000,
                        gravity: 'top',
                        position: 'right',
                        backgroundColor: '#4CAF50',
                        stopOnFocus: true,
                        callback: () => {
                            window.location.href = '/';
                        }
                    }).showToast();
                } else {
                    throw new Error(data.message || 'Failed to delete account');
                }
            } catch (error) {
                console.error('Error deleting account:', error);
                Toastify({
                    text: error.message || 'An error occurred while deleting your account',
                    duration: 5000,
                    gravity: 'top',
                    position: 'right',
                    backgroundColor: '#f44336',
                    stopOnFocus: true
                }).showToast();
            } finally {
                modal.style.display = 'none';
            }
        });
    });
    </script>
