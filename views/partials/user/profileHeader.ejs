<!-- Profile Header (Responsive) -->
<link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Jost:wght@400;500&display=swap" rel="stylesheet">
<nav class="profile-navbar">
  <div class="profile-navbar-left">
    <button id="sidebarToggle" class="sidebar-toggle-btn" aria-label="Open Sidebar">
      <i class="fas fa-bars"></i>
    </button>
    <a href="/" class="profile-brand">LUME</a>
  </div>
  <div class="profile-navbar-center" id="profileNavLinks">
    <a href="/" class="nav-link">Home</a>
    <a href="/shopAll" class="nav-link">Shop All</a>
    <a href="/featured" class="nav-link">Featured</a>
    <a href="/new-arrivals" class="nav-link">New Arrivals</a>
  </div>
  <div class="profile-navbar-right">
    <a href="/wishlist" class="icon-link"><i class="far fa-heart"></i></a>
    <a href="/cart" class="icon-link"><i class="fas fa-shopping-cart"></i></a>
    <a href="/profile" class="icon-link"><i class="fas fa-user"></i></a>
    <button id="profileMenuToggle" class="profile-menu-toggle" aria-label="Open Menu">
      <i class="fas fa-ellipsis-v"></i>
    </button>
  </div>
</nav>
<style>
.profile-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0.75rem 1.5rem;
  border-bottom: 1px solid #e0d8cc;
  position: sticky;
  top: 0;
  z-index: 1100;
}
.profile-navbar-left, .profile-navbar-center, .profile-navbar-right {
  display: flex;
  align-items: center;
}
.profile-navbar-center {
  gap: 1.5rem;
}
.profile-navbar .nav-link {
  color: #1a0f0a;
  font-family: 'Jost', sans-serif;
  font-size: 1rem;
  text-decoration: none;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 0;
  transition: background 0.2s, color 0.2s;
}
.profile-navbar .nav-link:hover {
  background: #f8f5f2;
  color: var(--muted-green);
}
.profile-navbar .icon-link {
  color: #1a0f0a;
  font-size: 1.2rem;
  margin-left: 1rem;
  text-decoration: none;
}
.sidebar-toggle-btn, .profile-menu-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  margin-right: 1rem;
  cursor: pointer;
}
.profile-menu-toggle {
  display: none;
}
@media (max-width: 900px) {
  .profile-navbar-center {
    display: none;
  }
  .profile-menu-toggle {
    display: inline-flex;
  }
}
@media (max-width: 600px) {
  .profile-navbar {
    padding: 0.5rem 0.7rem;
  }
  .profile-navbar .icon-link {
    margin-left: 0.5rem;
  }
}
</style>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Sidebar toggle (already handled by userSidebar.js)

  // Responsive menu toggle (for nav links)
  const menuToggle = document.getElementById('profileMenuToggle');
  const navLinks = document.getElementById('profileNavLinks');
  if (menuToggle && navLinks) {
    menuToggle.addEventListener('click', function() {
      if (navLinks.style.display === 'flex') {
        navLinks.style.display = 'none';
      } else {
        navLinks.style.display = 'flex';
        navLinks.style.flexDirection = 'column';
        navLinks.style.position = 'absolute';
        navLinks.style.top = '60px';
        navLinks.style.left = '0';
        navLinks.style.width = '100%';
        navLinks.style.background = '#fff';
        navLinks.style.zIndex = '1200';
        navLinks.style.boxShadow = '0 2px 8px rgba(0,0,0,0.07)';
      }
    });
  }
});
</script> 