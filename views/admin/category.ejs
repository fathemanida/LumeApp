        }

        .sidebar {
            width: 240px;
            background: white;
            border-right: 1px solid var(--border-color);
            padding: 2rem 1.5rem;
        }

        .brand {
            font-family: 'Aboreto', cursive;
            font-size: 1.8rem;
            margin-bottom: 2.5rem;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            color: var(--dark-brown);
        }

        .nav-menu {
            list-style: none;
        }

        .nav-item {
            margin-bottom: 1rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            color: var(--dark-brown);
            padding: 0.5rem 0.75rem;
            transition: all 0.3s;
            border-radius: 4px;
        }

        .nav-link:hover,
