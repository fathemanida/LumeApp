<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Banner | LUME Admin</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Aboreto&family=Jost:wght@300;400;500;600&display=swap" rel="stylesheet">
  <style>
    body {
      background: #1a1a1a;
      color: #fff;
      font-family: 'Jost', sans-serif;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 600px;
      margin: 2rem auto;
      background: #232323;
      border-radius: 12px;
      box-shadow: 0 4px 24px rgba(0,0,0,0.3);
      padding: 2rem 1.5rem;
    }
    h1 {
      font-family: 'Aboreto', cursive;
      color: #dac6a4;
      text-align: center;
      margin-bottom: 2rem;
      font-size: 2rem;
    }
    .form-group {
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin-bottom: 0.5rem;
      color: #b3b3b3;
      font-weight: 500;
    }
    input[type="text"], input[type="url"], textarea, select {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      border: 1px solid #404040;
      background: #333;
      color: #fff;
      font-size: 1rem;
      margin-bottom: 0.5rem;
      transition: border 0.3s;
    }
    input[type="text"]:focus, input[type="url"]:focus, textarea:focus, select:focus {
      border-color: #dac6a4;
      outline: none;
    }
    .file-input {
      display: block;
      margin-bottom: 0.5rem;
      color: #fff;
    }
    .image-preview, .current-images {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 10px;
    }
    .image-preview img, .current-images img {
      width: 90px;
      height: 90px;
      object-fit: cover;
      border-radius: 8px;
      border: 2px solid #404040;
      background: #222;
      position: relative;
    }
    .remove-image-btn {
      position: absolute;
      top: 2px;
      right: 2px;
      background: #f44336;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 22px;
      height: 22px;
      font-size: 1rem;
      cursor: pointer;
      z-index: 2;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .img-wrapper {
      position: relative;
      display: inline-block;
    }
    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      border: none;
      background: linear-gradient(45deg, #dac6a4, #f0d8a8);
      color: #1a1a1a;
      font-size: 1rem;
      margin-right: 1rem;
      transition: background 0.3s, color 0.3s;
    }
    .btn:hover {
      background: #dac6a4;
      color: #232323;
    }
    .btn-back {
      background: #333;
      color: #dac6a4;
      border: 1px solid #dac6a4;
      margin-right: 0;
    }
    .btn-back:hover {
      background: #dac6a4;
      color: #232323;
    }
    .error-message {
      color: #f44336;
      font-size: 0.95rem;
      margin-bottom: 0.5rem;
    }
    @media (max-width: 600px) {
      .container {
        padding: 1rem 0.5rem;
      }
      h1 {
        font-size: 1.3rem;
      }
      .image-preview img, .current-images img {
        width: 60px;
        height: 60px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/admin/banner" class="btn btn-back"><i class="fas fa-arrow-left"></i> Back</a>
    <h1>Edit Banner</h1>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>
    <form id="editBannerForm" action="/admin/banner/edit/<%= banner._id %>" method="POST" enctype="multipart/form-data" autocomplete="off">
      <div class="form-group">
        <label for="name">Banner Name</label>
        <input type="text" id="name" name="name" required maxlength="100" value="<%= banner.name %>">
      </div>
      <div class="form-group">
        <label for="subtitle">Subtitle</label>
        <input type="text" id="subtitle" name="subtitle" required maxlength="200" value="<%= banner.subtitle %>">
      </div>
      <div class="form-group">
        <label for="link">Redirect Link</label>
        <input type="url" id="link" name="link" placeholder="https://..." value="<%= banner.link %>">
      </div>
      <div class="form-group">
        <label for="isActive">Status</label>
        <select id="isActive" name="isActive">
          <option value="true" <%= banner.isActive ? 'selected' : '' %>>Active</option>
          <option value="false" <%= !banner.isActive ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>
      <div class="form-group">
        <label>Current Images</label>
        <div class="current-images" id="currentImages">
          <% if (banner.images && banner.images.length > 0) { %>
            <% banner.images.forEach(function(img, idx) { %>
              <div class="img-wrapper" data-filename="<%= img %>">
                <img src="/uploads/banner/<%= img %>" alt="Banner Image <%= idx+1 %>">
                <button type="button" class="remove-image-btn" title="Remove" onclick="removeImage('<%= img %>')">&times;</button>
              </div>
            <% }) %>
          <% } else { %>
            <span style="color:#b3b3b3;">No images uploaded.</span>
          <% } %>
        </div>
        <input type="hidden" name="removedImages" id="removedImages">
        <div style="color:#f44336;font-size:0.95rem;">Removed images will be deleted after saving.</div>
      </div>
      <div class="form-group">
        <label for="images">Replace Images (max 5)</label>
        <input type="file" id="images" name="images" accept="image/*" multiple class="file-input">
        <div class="image-preview" id="imagePreview"></div>
        <div id="image-error" class="error-message"></div>
        <div style="color:#b3b3b3;font-size:0.95rem;">Uploading new images will replace all current images.</div>
      </div>
      <button type="submit" class="btn">Update Banner</button>
    </form>
  </div>
  <script>
    const imagesInput = document.getElementById('images');
    const imagePreview = document.getElementById('imagePreview');
    const imageError = document.getElementById('image-error');
    const removedImagesInput = document.getElementById('removedImages');
    let removedImages = [];
    function removeImage(filename) {
      removedImages.push(filename);
      removedImagesInput.value = JSON.stringify(removedImages);
      const imgWrapper = document.querySelector('.img-wrapper[data-filename="' + filename + '"]');
      if (imgWrapper) imgWrapper.style.display = 'none';
    }
    imagesInput.addEventListener('change', function(e) {
      imagePreview.innerHTML = '';
      imageError.textContent = '';
      const files = Array.from(e.target.files);
      if (files.length > 5) {
        imageError.textContent = 'You can upload a maximum of 5 images.';
        imagesInput.value = '';
        return;
      }
      files.forEach(file => {
        const reader = new FileReader();
        reader.onload = function(event) {
          const img = document.createElement('img');
          img.src = event.target.result;
          imagePreview.appendChild(img);
        };
        reader.readAsDataURL(file);
      });
    });
  </script>
</body>
</html> 