            position: absolute;
            right: 2rem;
            top: 2rem;
            font-size: 2.5rem;
            opacity: 0.15;
            color: var(--accent-color);
        }

        /* Chart Container */
        .chart-container {
            background: linear-gradient(145deg, var(--bg-secondary), #353535);
            padding: 2rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            box-shadow: 0 4px 12px var(--shadow-color);
            position: relative;
            height: 450px;
            border: 1px solid var(--border-color);
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .chart-title {
            font-size: 1.5rem;
            color: var(--accent-color);
            font-weight: 500;
        }

        .chart-legend {
            display: flex;
            gap: 1.5rem;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9rem;
            font-weight: 400;
        }

        .legend-color {
            width: 16px;
            height: 16px;
            border-radius: 4px;
        }

        /* Sales Table */
        .sales-table-container {
            background: linear-gradient(145deg, var(--bg-secondary), #353535);
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow-color);
            overflow-x: auto;
            border: 1px solid var(--border-color);
        }

        .sales-table {
            width: 100%;
            border-collapse: collapse;
        }

        .sales-table th {
            text-align: left;
            padding: 1.25rem;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            font-weight: 600;
            white-space: nowrap;
            border-bottom: 1px solid var(--border-color);
        }

        .sales-table td {
            padding: 1.25rem;
            border-bottom: 1px solid var(--border-color);
            color: var(--text-secondary);
        }

        .sales-table tr:hover {
            background-color: var(--hover-bg);
        }

        .badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .badge-success {
            background-color: rgba(76, 175, 80, 0.2);
            color: #4caf50;
        }

        .badge-warning {
            background-color: rgba(255, 152, 0, 0.2);
            color: #ff9800;
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .animate-fadeIn {
            animation: fadeIn 0.8s ease forwards;
        }

        .delay-1 { animation-delay: 0.2s; }
        .delay-2 { animation-delay: 0.4s; }
        .delay-3 { animation-delay: 0.6s; }
        .delay-4 { animation-delay: 0.8s; }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sidebar {
                width: 240px;
            }
            .main-content {
                margin-left: 240px;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                position: fixed;
                z-index: 1000;
            }
            .sidebar.active {
                transform: translateX(0);
            }
            .main-content {
                margin-left: 0;
            }
            .mobile-menu-btn {
                display: block;
            }
            .profile-name {
                display: none;
            }
            .sales-summary {
                grid-template-columns: 1fr 1fr;
            }
            .report-filter {
                flex-direction: column;
                align-items: flex-start;
            }
        }

        @media (max-width: 480px) {
            .sales-summary {
                grid-template-columns: 1fr;
            }
        }
    </style>
