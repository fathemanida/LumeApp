<style>
 /* Dashboard Cards with Elegant Hover Effects */
.dashboard-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
  order: -1; /* This will move the cards above the table */
}

.content-area {
  display: flex;
  flex-direction: column;
}

.card {
  background: var(--dark-brown); /* Dark background by default */
  border-radius: 8px;
  padding: 1.5rem;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: var(--light-bg);
  position: relative;
  overflow: hidden;
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  background: #f5ede4; /* Very light brown */
  box-shadow: 0 12px 20px rgba(41, 29, 14, 0.15);
  color: var(--dark-brown);
  border-color: var(--border-color);
}

.card:hover .card-icon {
  background-color: rgba(49, 66, 22, 0.1);
  color: var(--olive-green);
}

.card:hover .card-title {
  opacity: 0.8;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: var(--olive-green);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.4s ease;
}

.card:hover::before {
  transform: scaleX(1);
}

.card-title {
  font-size: 0.9rem;
  opacity: 0.7;
  margin-bottom: 0.5rem;
  font-weight: 500;
  transition: opacity 0.3s ease;
}

.card-value {
  font-size: 1.8rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  letter-spacing: 0.5px;
}

.card-change {
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.positive {
  color: #51623e; /* Light olive green */
}

.card:hover .positive {
  color: var(--olive-green);
}

.negative {
  color: #d4a5a5; /* Light red */
}

.card:hover .negative {
  color: #a83a3a;
}

.card-icon {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
  background-color: rgba(255, 255, 255, 0.1);
  color: var(--light-bg);
  font-size: 1.2rem;
  transition: all 0.4s ease;
}
</style>
