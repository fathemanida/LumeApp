                    <h1 class="page-title">My Wallet</h1>
                    <a href="/wallet/add-funds" class="edit-btn">
                        <i class="fas fa-plus"></i>
                        Add Funds
                    </a>
                </div>

                <!-- Wallet Balance Card -->
                <div class="wallet-balance-card">
                    <h2>Current Balance</h2>
                    <div class="balance-amount">₹<%= (wallet && wallet.balance) ? wallet.balance.toFixed(2) : '0.00' %></div>
                    <p>Available for purchases</p>
                    
                   
                </div>

                <!-- Transactions History -->
                <div class="transactions-section">
                    <h2 class="section-title">Recent Transactions</h2>
                    
                    <% if (transactions && transactions.length > 0) { %>
                        <table class="transactions-table">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(transaction => { %>
                                    <tr>
                                        <td>
                                            <div class="transaction-details">
                                                <div class="transaction-icon">
                                                    <% if (transaction && transaction.type === 'CREDIT') { %>
                                                        <i class="fas fa-arrow-down"></i>
                                                    <% } else { %>
                                                        <i class="fas fa-arrow-up"></i>
                                                    <% } %>
                                                </div>
                                                <div class="transaction-description">
                                                    <h4><%= transaction && transaction.description ? transaction.description : 'N/A' %></h4>
                                                    <p><%= transaction && transaction.orderId ? transaction.orderId : 'N/A' %></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= transaction && transaction.createdAt ? new Date(transaction.createdAt).toLocaleDateString() : 'N/A' %></td>
                                        <td class="transaction-amount <%= transaction && transaction.type === 'CREDIT' ? 'credit' : 'debit' %>">
                                            <% if (transaction && transaction.type === 'CREDIT') { %>+<% } else { %>-<% } %>
                                            ₹<%= transaction && transaction.amount ? transaction.amount.toFixed(2) : '0.00' %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="no-transactions">
                            <p>No transactions found. Your transaction history will appear here.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    <% } else { %>
