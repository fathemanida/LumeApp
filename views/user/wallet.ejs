    <script>
        document.querySelector('.logout-btn').addEventListener('click', function() {
            window.location.href = '/logout';
        });

        document.querySelector('.delete-btn').addEventListener('click', function() {
            if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                window.location.href = '/profile/delete';
            }
        });

        // Wallet buttons functionality
        document.querySelectorAll('.primary-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                window.location.href = '/wallet/add-funds';
            });
        });

        document.querySelectorAll('.secondary-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                window.location.href = '/wallet/transfer';
            });
        });

        // Function to show toast notification
        function showToast(message, type = 'success') {
            Toastify({
                text: message,
                duration: 5000,
                gravity: "top",
                position: "right",
                className: `custom-toast ${type}`,
                close: true,
                stopOnFocus: true,
                onClick: function(){} // Callback after click
            }).showToast();
        }

        // Check for return status in URL parameters
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const returnStatus = urlParams.get('returnStatus');
            const refundAmount = urlParams.get('refundAmount');

            if (returnStatus === 'accepted') {
                showToast(`Return request accepted! Amount of $${refundAmount} has been added to your wallet.`);
            } else if (returnStatus === 'rejected') {
                showToast('Return request has been rejected.', 'error');
            }
        });
    </script>
</body>
