<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders - Lume</title>
    <link href="https://fonts.googleapis.com/css2?family=Aboreto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --theme-title-font: 'Aboreto', sans-serif;
            --theme-body-font: 'Aboreto', sans-serif;
            --theme-black: #111;
            --theme-gray: #888;
            --theme-highlight: #95951581;
            --theme-border: #e0e0e0;
            --dark-brown: #3a2c1a;
            --olive-green: #334411;
            --light-bg: #f9f5f0;
            --error-color: #dc3545;
            --success-color: #28a745;
        }

        body {
            font-family: 'Aboreto', sans-serif;
            background-color: #f0e9e0;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            color: var(--dark-brown);
            display: flex;
            flex-direction: column;
        }

      
        /* Main Container */
        .main-container {
            display: flex;
            flex: 1;
            flex-direction: column;
        }

        /* Elegant Sidebar */
        .sidebar {
            width: 100%;
            background-color: white;
            padding: 1rem;
            border-bottom: 1px solid var(--theme-border);
        }

        .sidebar-title {
            font-family: 'Aboreto', cursive;
            font-size: 1.5rem;
            color: var(--olive-green);
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--theme-border);
            letter-spacing: 1px;
        }

        .sidebar-nav {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .sidebar-nav a {
            color: var(--dark-brown);
            text-decoration: none;
            padding: 0.75rem 1rem;
            border-radius: 0;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.95rem;
        }

        .sidebar-nav a i {
            width: 20px;
            text-align: center;
            color: var(--olive-green);
        }

        .sidebar-nav a:hover {
            background-color: rgba(51, 68, 17, 0.1);
            color: var(--olive-green);
            transform: translateX(4px);
        }

        .sidebar-nav a.active {
            background-color: rgba(51, 68, 17, 0.2);
            color: var(--olive-green);
            font-weight: 500;
            border-left: 3px solid var(--olive-green);
        }

        .sidebar-actions {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--theme-border);
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .sidebar-actions button {
            padding: 0.75rem;
            border-radius: 0;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: 'Aboreto', sans-serif;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .logout-btn {
            background-color: rgba(51, 68, 17, 0.1);
            color: var(--dark-brown);
            border: 1px solid var(--theme-border);
        }

        .logout-btn:hover {
            background-color: rgba(51, 68, 17, 0.2);
            border-color: var(--olive-green);
        }

        .delete-btn {
            background-color: transparent;
            color: #ff6b6b;
            border: 1px solid #ff6b6b;
        }

        .delete-btn:hover {
            background-color: rgba(255, 107, 107, 0.1);
        }

        /* Content Area */
        .content-area {
            flex: 1;
            padding: 2rem;
            background-color: #f0e9e0;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-direction: column;
            gap: 1rem;
        }

        .page-title {
            font-family: 'Aboreto', cursive;
            font-size: 2rem;
            color: var(--dark-brown);
            margin: 0;
        }

        /* Order table styles */
        .orders-table-container {
            overflow-x: auto;
            margin-top: 1rem;
            /* Add a subtle shadow to indicate scrollability on mobile */
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
            position: relative;
        }
        .orders-table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            min-width: 700px; /* Ensures table is wider than screen on mobile */
        }
        @media (max-width: 768px) {
            .orders-table {
                min-width: 700px;
            }
            .orders-table-container::after {
                content: '';
                position: absolute;
                top: 0; right: 0; bottom: 0;
                width: 30px;
                pointer-events: none;
                background: linear-gradient(to left, #fff 60%, rgba(255,255,255,0));
                display: block;
            }
        }

        .orders-table th {
            background-color: var(--light-bg);
            color: var(--dark-brown);
            padding: 1rem;
            text-align: left;
            font-family: 'Aboreto', sans-serif;
            font-weight: 500;
            font-size: 0.9rem;
            border-bottom: 1px solid var(--theme-border);
        }

        .orders-table td {
            padding: 1rem;
            border-bottom: 1px solid var(--theme-border);
            font-size: 0.9rem;
            color: var(--theme-gray);
        }

        .orders-table tr:last-child td {
            border-bottom: none;
        }

        .orders-table tr:hover {
            background-color: var(--light-bg);
        }

        .status {
            padding: 0.3rem 0.6rem;
            border-radius: 0;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-block;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-delivered {
            background-color: #d4edda;
            color: #155724;
        }

        .status-processing {
            background-color: #cce5ff;
            color: #004085;
        }

        .status-cancelled {
            background-color: #f8d7da;
            color: #721c24;
        }

        .view-icon, .return-icon {
            color: var(--olive-green);
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .view-icon:hover, .return-icon:hover {
            color: var(--dark-brown);
            transform: scale(1.1);
        }

        .return-status {
            background-color: var(--light-bg);
            padding: 4px 8px;
            border-radius: 0;
            margin-top: 4px;
            color: var(--theme-gray);
        }

        /* Pagination styles */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 1.5rem;
            list-style: none;
            padding: 0;
        }

        .pagination li {
            margin: 0 0.3rem;
        }

        .pagination a {
            display: inline-block;
            padding: 0.5rem 1rem;
            background-color: white;
            border: 1px solid var(--theme-border);
            border-radius: 0;
            text-decoration: none;
            color: var(--dark-brown);
            transition: all 0.3s ease;
        }

        .pagination a.active {
            background-color: var(--olive-green);
            color: white;
            border-color: var(--olive-green);
        }

        .pagination a:hover:not(.active) {
            background-color: var(--light-bg);
            color: var(--olive-green);
        }

        .pagination a.disabled {
            color: #999;
            cursor: not-allowed;
            pointer-events: none;
        }

        .pagination a.disabled:hover {
            background-color: white;
            color: #999;
        }

        .no-orders {
            text-align: center;
            padding: 3rem;
            background: white;
            border: 1px solid var(--theme-border);
        }

        .no-orders h2 {
            color: var(--dark-brown);
            margin-bottom: 1rem;
            font-family: 'Aboreto', cursive;
        }

        .no-orders p {
            color: var(--theme-gray);
            margin-bottom: 1.5rem;
        }

        .shop-now-btn, .login-btn {
            background-color: var(--olive-green);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0;
            font-size: 1rem;
            font-weight: 500;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            font-family: 'Aboreto', sans-serif;
            text-decoration: none;
            display: inline-block;
        }

        .shop-now-btn:hover, .login-btn:hover {
            background-color: var(--dark-brown);
            transform: translateY(-2px);
        }

        .btn-try-again {
            background-color: var(--olive-green);
            color: white !important;
            font-weight: 700;
            border: none;
            border-radius: 0;
            letter-spacing: 1px;
            padding: 0.4rem 1.1rem;
            transition: all 0.3s ease;
            display: inline-block;
            text-decoration: none;
            font-size: 0.85rem;
            font-family: 'Aboreto', sans-serif;
        }
        
        .btn-try-again:hover {
            background-color: var(--dark-brown);
            color: white !important;
            transform: translateY(-2px);
        }

       
        /* Desktop styles */
        @media (min-width: 769px) {
            .main-container {
                flex-direction: row;
            }

            .sidebar {
                width: 280px;
                min-height: calc(100vh - 70px);
                border-right: 1px solid var(--theme-border);
                border-bottom: none;
                padding: 2rem 1.5rem;
            }

            .content-area {
                flex: 1;
                padding: 2rem 3rem;
            }

            .page-header {
                flex-direction: row;
                align-items: center;
            }
        }

        /* Mobile adjustments */
        @media (max-width: 768px) {
            

            .search-input {
                width: 150px;
            }

            .search-input:focus {
                width: 180px;
            }

            .orders-table {
                min-width: 600px;
            }

            
        }
    </style>
</head>
<body>
    <!-- Navbar -->
<% -include('../partials/user/header.ejs') %>

    <% if (locals.user) { %>
        <div class="main-container">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar-title">My Account</div>
                <div class="sidebar-nav">
                    <a href="/profile" class="nav-link"><i class="fas fa-user"></i> Profile</a>
                    <a href="/wallet" class="nav-link"><i class="fas fa-wallet"></i> Wallet</a>
                    <a href="/address" class="nav-link"><i class="fas fa-map-marker-alt"></i> Address</a>
                    <a href="/orders" class="nav-link active"><i class="fas fa-box-open"></i> Orders</a>
                    <a href="/wishlist" class="nav-link"><i class="fas fa-heart"></i> Wishlist</a>
                    <a href="/settings" class="nav-link"><i class="fas fa-cog"></i> Settings</a>
                </div>
                <div class="sidebar-actions">
                    <button class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
                    <button class="delete-btn"><i class="fas fa-trash-alt"></i> Delete Account</button>
                </div>
            </div>

            <!-- Orders Content Area -->
            <div class="content-area">
                <div class="page-header">
                    <h1 class="page-title">Order History</h1>
                    <div class="search-container">
                        <form action="/orders" method="GET" class="d-flex" id="searchForm">
                            <input type="text" name="search" class="search-input" placeholder="Search orders..." value="<%= locals.searchQuery || '' %>" id="searchInput">
                            <button type="submit" class="search-button">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <% if (orders && orders.length > 0) { %>
                    <div class="d-flex justify-content-between align-items-center mb-4" style="color: var(--theme-gray);">
                        <span>Showing <%= orders.length %> of <%= totalOrders %> orders</span>
                    </div>
                    <div class="orders-table-container">
                        <table class="orders-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Image</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Return Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>#<%= order.orderNumber %></td>
                                        <td>
                                            <% if (order.items && order.items.length > 0) { %>
                                                <div style="display: flex; flex-direction: column; align-items: center;">
                                                    <img src="/uploads/product/<%= order.items[0].image %>" alt="<%= order.items[0].name %>" width="80" height="80" style="object-fit: cover;">
                                                    <span style="margin-top: 8px; font-size: 0.85rem; color: var(--theme-gray); text-align: center; max-width: 120px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                        <%= order.items[0].name %>
                                                    </span>
                                                </div>
                                            <% } else { %>
                                                <div style="display: flex; flex-direction: column; align-items: center;">
                                                    <img src="/images/placeholder.png" alt="No image" width="80" height="80" style="object-fit: cover;">
                                                    <span style="margin-top: 8px; font-size: 0.85rem; color: var(--theme-gray);">Product not found</span>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td><%= order.date %></td>
                                        <td>₹<%= (order.totalAmount || 0).toFixed(2) %></td>
                                        <td>
                                            <span class="status status-<%= order.status.toLowerCase() %>">
                                                <%= order.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (order.returnRequest) { %>
                                                <div class="return-status">
                                                    <% if (order.returnRequest.status === 'Pending') { %>
                                                        <div style="color: #856404; background-color: #fff3cd; padding: 4px 8px; border-radius: 0;">
                                                            <i class="fas fa-clock"></i> Return Requested
                                                        </div>
                                                    <% } else if (order.returnRequest.status === 'Accepted') { %>
                                                        <div style="color: #155724; background-color: #d4edda; padding: 4px 8px; border-radius: 0;">
                                                            <i class="fas fa-check-circle"></i> Return Accepted
                                                        </div>
                                                    <% } else if (order.returnRequest.status === 'Rejected') { %>
                                                        <div style="color: #721c24; background-color: #f8d7da; padding: 4px 8px; border-radius: 0;">
                                                            <i class="fas fa-times-circle"></i> Return Rejected
                                                            <% if (order.returnRequest.adminResponse) { %>
                                                                <div style="font-size: 0.75rem; margin-top: 2px;">
                                                                    Reason: <%= order.returnRequest.adminResponse %>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                    <% } %>
                                                    <div style="font-size: 0.75rem; margin-top: 2px; color: var(--theme-gray);">
                                                        Requested on: <%= new Date(order.returnRequest.requestedAt).toLocaleDateString() %>
                                                    </div>
                                                    <% if (order.returnRequest.respondedAt) { %>
                                                        <div style="font-size: 0.75rem; margin-top: 2px; color: var(--theme-gray);">
                                                            Responded on: <%= new Date(order.returnRequest.respondedAt).toLocaleDateString() %>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            <% } else { %>
                                                <span style="color: var(--theme-gray);">No return request</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/orders/<%= order._id %>" class="view-icon" title="View Order Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <% if (order.status === 'Delivered' && !order.returnRequest) { %>
                                                <button onclick="requestReturn('<%= order._id %>')" class="return-icon" title="Request Return" style="background: none; border: none; margin-left: 10px;">
                                                    <i class="fas fa-undo"></i>
                                                </button>
                                            <% } %>
                                            <% if (order.status === 'Failed') { %>
                                                <a href="/proceed-payment?orderId=<%= order._id %>" class="btn-try-again" style="margin-left: 10px;">
                                                    <i class="fas fa-redo-alt"></i> Try Again
                                                </a>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <div class="pagination">
                        <% if (currentPage > 1) { %>
                            <li><a href="?page=<%= currentPage - 1 %><%= locals.searchQuery ? '&search=' + locals.searchQuery : '' %>" class="page-btn <%= currentPage === 1 ? 'disabled' : '' %>"><</a></li>
                        <% } %>
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li><a href="?page=<%= i %><%= locals.searchQuery ? '&search=' + locals.searchQuery : '' %>" class="page-btn <%= currentPage === i ? 'active' : '' %>"><%= i %></a></li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <li><a href="?page=<%= currentPage + 1 %><%= locals.searchQuery ? '&search=' + locals.searchQuery : '' %>" class="page-btn <%= currentPage === totalPages ? 'disabled' : '' %>">></a></li>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="no-orders">
                        <h2>No Orders Found</h2>
                        <p>You haven't placed any orders yet.</p>
                        <a href="/shopAll" class="shop-now-btn">Start Shopping</a>
                    </div>
                <% } %>
            </div>
        </div>
    <% } else { %>
        <div class="content-area">
            <div class="no-orders">
                <h2>Welcome to LUME</h2>
                <p>Please log in to view your orders.</p>
                <a href="/login" class="login-btn">Login Now</a>
            </div>
        </div>
    <% } %>

    <!-- Footer -->
<% -include('../partials/user/fooret.ejs') %>

    <script>
        // Sidebar button functionality
        document.querySelector('.logout-btn').addEventListener('click', function() {
            window.location.href = '/logout';
        });

        document.querySelector('.delete-btn').addEventListener('click', function() {
            if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                window.location.href = '/profile/delete';
            }
        });

        function requestReturn(orderId) {
            window.location.href = `/orders/${orderId}`;
        }

        // Add search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const searchForm = document.getElementById('searchForm');
            const orderRows = document.querySelectorAll('.orders-table tbody tr');

            function performSearch() {
                const searchTerm = searchInput.value.trim().toLowerCase();
                let visibleCount = 0;

                orderRows.forEach(row => {
                    const orderId = row.querySelector('td:first-child').textContent.toLowerCase();
                    const productName = row.querySelector('td:nth-child(2) span').textContent.toLowerCase();
                    const status = row.querySelector('td:nth-child(5) span').textContent.toLowerCase();

                    if (searchTerm === '' || 
                        orderId.includes(searchTerm) || 
                        productName.includes(searchTerm) || 
                        status.includes(searchTerm)) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update the count display
                const countElement = document.querySelector('.d-flex.justify-content-between span');
                if (countElement) {
                    countElement.textContent = `Showing ${visibleCount} of ${orderRows.length} orders`;
                }
            }

            // Perform search on input change
            searchInput.addEventListener('input', performSearch);

            // Prevent form submission if search is empty
            searchForm.addEventListener('submit', function(e) {
                if (!searchInput.value.trim()) {
                    e.preventDefault();
                }
            });
        });
    </script>
</body>
</html>