// Add to Cart from Wishlist
async function addToCartFromWishlist(productId, button) {
  try {
    // Show loading state
    const addToCartBtn = button.closest('.add-to-cart-btn') || button;
    const originalContent = addToCartBtn.innerHTML;
    addToCartBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
    addToCartBtn.disabled = true;
    
    const response = await fetch('/add-to-cart', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        productId: productId,
        quantity: 1,
        fromWishlist: true
      })
    });
    
    const data = await response.json();
    
    if (data.success) {
      // Show success message
      Toastify({
        text: data.message || 'Product added to cart successfully',
        duration: 3000,
        close: true,
        gravity: 'top',
        position: 'right',
        backgroundColor: '#4caf50',
        stopOnFocus: true,
      }).showToast();
      
      // Update cart count in header
      const cartCount = document.querySelector('.cart-count');
      if (cartCount) {
        const currentCount = parseInt(cartCount.textContent) || 0;
        cartCount.textContent = currentCount + 1;
        cartCount.style.display = 'flex';
      }
    } else {
      throw new Error(data.message || 'Failed to add product to cart');
    }
  } catch (error) {
    console.error('Error:', error);
    Toastify({
      text: error.message || 'Failed to add product to cart',
      duration: 3000,
      close: true,
      gravity: 'top',
      position: 'right',
      backgroundColor: '#f44336',
      stopOnFocus: true,
    }).showToast();
  } finally {
    // Reset button state if it exists
    if (addToCartBtn) {
      addToCartBtn.innerHTML = originalContent;
      addToCartBtn.disabled = false;
    }
  }
}

// Remove from Wishlist
async function removeFromWishlist(productId, button) {
  try {
    const wishlistItem = button.closest('.wishlist-item');
    const removeBtn = button.classList.contains('remove-from-wishlist') ? button : button.closest('.remove-from-wishlist');
    
    // Show loading state
    const originalContent = removeBtn.innerHTML;
    removeBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
    removeBtn.disabled = true;
      button.disabled = true;
      button.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>';
    }

    const response = await fetch('/wishlist/remove', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ productId })
    });

    const data = await response.json();
    
    if (data.success) {
      // Show success message
      Toastify({
        text: "✓ Removed from wishlist",
        duration: 3000,
        close: true,
        gravity: "top",
        position: "right",
        backgroundColor: "#28a745",
        stopOnFocus: true,
        className: "toastify-success",
        style: {
          fontFamily: "'Jost', sans-serif",
          fontWeight: "500",
          borderRadius: "4px",
          boxShadow: "0 4px 12px rgba(40, 167, 69, 0.3)"
        }
      }).showToast();

      // Update wishlist count in header
      const wishlistCountElement = document.querySelector('.wishlist-count');
      if (wishlistCountElement && data.wishlistCount !== undefined) {
        wishlistCountElement.textContent = data.wishlistCount;
        wishlistCountElement.style.display = data.wishlistCount > 0 ? 'flex' : 'none';
      }

      // Remove the item from the UI
      const itemElement = button ? button.closest('.col-md-6') : null;
      if (itemElement) {
        itemElement.style.opacity = '0';
        setTimeout(() => {
          itemElement.remove();
        }, 300);
      }

      // If no items left, reload to show empty state
      const wishlistItems = document.querySelectorAll('.wishlist-item');
      if (wishlistItems.length === 0) {
        setTimeout(() => {
          window.location.reload();
        }, 500);
      }
    } else {
      throw new Error(data.message || 'Failed to remove from wishlist');
    }
  } catch (error) {
    console.error('Remove from wishlist error:', error);
    Toastify({
      text: "✗ " + (error.message || "Failed to remove item"),
      duration: 3000,
      close: true,
      gravity: "top",
      position: "right",
      backgroundColor: "#dc3545",
      stopOnFocus: true,
      className: "toastify-error",
      style: {
        fontFamily: "'Jost', sans-serif",
        fontWeight: "500",
        borderRadius: "4px",
        boxShadow: "0 4px 12px rgba(220, 53, 69, 0.3)"
      }
    }).showToast();
  } finally {
    // Reset button state if button is provided
    if (button) {
      button.disabled = false;
      button.innerHTML = '<i class="far fa-trash-alt"></i> Remove';
    }
  }
}
</script>

