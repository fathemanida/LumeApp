    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded');
            const payNowBtn = document.getElementById('payNowBtn');
            if (payNowBtn) {
                console.log('Pay Now button found');
            } else {
                console.log('Pay Now button not found');
            }
        });

        function showPaymentForm(method) {
            console.log('Showing payment form for method:', method);
            document.querySelectorAll('.payment-form').forEach(form => {
                form.classList.remove('active');
            });
            document.getElementById(`${method}Form`).classList.add('active');

            const payNowBtn = document.getElementById('payNowBtn');
            if (method === 'cod') {
                payNowBtn.disabled = false;
            } else {
                validateForm(method);
            }
        }

        function validateForm(method) {
            console.log('Validating form for method:', method);
            const payNowBtn = document.getElementById('payNowBtn');
            if (method === 'razorpay') {
                payNowBtn.disabled = false;
            } else if (method === 'upi') {
                const upiId = document.getElementById('upiId').value;
                payNowBtn.disabled = !upiId;
            } else if (method === 'wallet') {
                const walletId = document.getElementById('walletId').value;
                payNowBtn.disabled = !walletId;
            }
        }

        async function processPayment() {
            const method = document.querySelector('input[name="paymentMethod"]:checked').value;
            
            if (method === 'razorpay') {
                try {
                    const loadingOverlay = document.getElementById('loadingOverlay');
                    loadingOverlay.style.display = 'flex';

                    const totalAmount = parseFloat(document.querySelector('.payment-container').dataset.totalAmount);

                    const res = await fetch('/create-order', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            amount: totalAmount,
                            addressId: '<%= address._id %>'
                        })
                    });

                    if (!res.ok) {
                        const errorData = await res.json();
                        throw new Error(errorData.message || `HTTP error! status: ${res.status}`);
                    }

                    const data = await res.json();

                    if (!data.success) {
                        throw new Error(data.message || "Order creation failed");
                    }

                    const options = {
                        key: "<%= RAZORPAY_KEY_ID %>", 
                        amount: data.amount,
                        currency: data.currency,
                        name: "Lume",
                        description: "Order Payment",
                        order_id: data.razorpayOrderId,
                        handler: async function (response) {
                            try {
                                console.log('Payment response:', response);
                                console.log('Order data:', data);

                                const verifyRes = await fetch('/verify-payment', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({
                                        razorpay_payment_id: response.razorpay_payment_id,
                                        razorpay_order_id: response.razorpay_order_id,
                                        razorpay_signature: response.razorpay_signature,
                                        orderId: data.orderId,
                                        addressId: '<%= address._id %>'
                                    })
                                });

                                if (!verifyRes.ok) {
                                    const errorData = await verifyRes.json();
                                    throw new Error(errorData.message || `HTTP error! status: ${verifyRes.status}`);
                                }

                                const verifyData = await verifyRes.json();
                                console.log('Verification response:', verifyData);
                                
                                if (verifyData.success) {
                                    if (verifyData.redirect) {
                                        window.location.href = verifyData.redirect;
                                    } else {
                                        window.location.href = `/payment-confirmation?orderId=${data.orderId}`;
                                    }
                                } else {
                                    throw new Error(verifyData.message || "Verification failed");
                                }
                            } catch (error) {
                                console.error('Payment verification error:', error);
                                Swal.fire("Payment Failed", error.message || "Payment verification failed", "error");
                            } finally {
                                loadingOverlay.style.display = 'none';
                            }
                        },
                        prefill: {
                            name: "<%= user.name %>",
                            email: "<%= user.email %>",
                            contact: "<%= address.phone %>"
                        },
                        theme: {
                            color: "#F6C90E"
                        },
                        modal: {
                            ondismiss: function() {
                                loadingOverlay.style.display = 'none';
                            }
                        }
                    };

                    const rzp = new Razorpay(options);
                    rzp.open();
                } catch (error) {
                    loadingOverlay.style.display = 'none';
                    Swal.fire("Error", error.message, "error");
                }
            } else {
                const otherPaymentData = { method, addressId: '<%= address._id %>' };

                if (method === 'upi') {
                    otherPaymentData.upiId = document.getElementById('upiId').value;
                } else if (method === 'wallet') {
                    otherPaymentData.walletId = document.getElementById('walletId').value;
                }

                const response = await fetch('/proceed-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(otherPaymentData)
                });

                const data = await response.json();
                if (data.success) {
                    window.location.href = `/payment-confirmation?orderId=${data.orderId}`;
                } else {
                    Swal.fire("Payment Failed", data.message || "Try again", "error");
                }
            }
        }

        document.getElementById('upiId')?.addEventListener('input', () => validateForm('upi'));
        document.getElementById('walletId')?.addEventListener('input', () => validateForm('wallet'));

        showPaymentForm('cod');
    </script>
