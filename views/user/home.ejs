                      <span class="discounted-price" style="color:#e63946;font-weight:600;font-size:1.1rem;">₹<%= product.salePrice.toLocaleString() %></span>
                    <% } else { %>
                      <span class="regular-price" style="color:#666;text-decoration:line-through;font-size:0.9rem;">₹<%= product.regularPrice.toLocaleString() %></span>
                    <% } %>
                  </div>
                </div>
              </a>
              <button class="btn w-100" style="background:#181818;color:#fff;border-radius:0;font-family:'Jost',sans-serif;font-size:1rem;text-transform:uppercase;letter-spacing:1px;padding:0.4rem 0;margin-top:0.5rem;">ADD TO CART</button>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <p class="text-muted">No new products available</p>
        </div>
      <% } %>
    </div>
    <button id="newColPrev" style="position:absolute;left:0;top:50%;transform:translateY(-50%);background:#fff;border:none;border-radius:50%;box-shadow:0 2px 8px rgba(0,0,0,0.08);width:32px;height:32px;display:flex;align-items:center;justify-content:center;z-index:10;cursor:pointer;"><i class="fas fa-chevron-left"></i></button>
    <button id="newColNext" style="position:absolute;right:0;top:50%;transform:translateY(-50%);background:#fff;border:none;border-radius:50%;box-shadow:0 2px 8px rgba(0,0,0,0.08);width:32px;height:32px;display:flex;align-items:center;justify-content:center;z-index:10;cursor:pointer;"><i class="fas fa-chevron-right"></i></button>
    <script>
      const newColScroll = document.getElementById('newCollectionScroll');
      const newColCards = newColScroll.querySelectorAll('div[style*="min-width"]');
      const newColCardWidth = newColCards[0]?.offsetWidth || 320;
      if (newColCards.length > 1) {
        const firstClone = newColCards[0].cloneNode(true);
        const lastClone = newColCards[newColCards.length-1].cloneNode(true);
        newColScroll.appendChild(firstClone);
        newColScroll.insertBefore(lastClone, newColCards[0]);
        newColScroll.scrollLeft = newColCardWidth;
      }
      let isNewColTransitioning = false;
      document.getElementById('newColPrev').onclick = () => {
        if (isNewColTransitioning) return;
        isNewColTransitioning = true;
        newColScroll.scrollBy({left: -newColCardWidth, behavior: 'smooth'});
        setTimeout(() => {
          if (newColScroll.scrollLeft <= 0) {
            newColScroll.scrollLeft = newColCardWidth * newColCards.length;
          }
          isNewColTransitioning = false;
        }, 350);
      };
      document.getElementById('newColNext').onclick = () => {
        if (isNewColTransitioning) return;
        isNewColTransitioning = true;
        newColScroll.scrollBy({left: newColCardWidth, behavior: 'smooth'});
        setTimeout(() => {
          if (newColScroll.scrollLeft >= newColCardWidth * (newColCards.length + 1)) {
            newColScroll.scrollLeft = newColCardWidth;
          }
          isNewColTransitioning = false;
        }, 350);
      };
      newColScroll.addEventListener('scroll', () => {
        if (newColScroll.scrollLeft <= 0) {
          newColScroll.scrollLeft = newColCardWidth * newColCards.length;
        } else if (newColScroll.scrollLeft >= newColCardWidth * (newColCards.length + 1)) {
          newColScroll.scrollLeft = newColCardWidth;
        }
      });
    </script>
  </section>

