    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        async function updateQuantity(itemId, action) {
            try {
                const response = await fetch('/cart/update-quantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ itemId, action })
                });

                const data = await response.json();
                console.log('Update quantity response:', data);
                
                if (!data.success) {
                    showNotification(data.message || 'Failed to update quantity', 'error');
                    return;
                }

                // Find the cart item container
                const cartItem = document.querySelector(`.cart-item[data-id="${itemId}"]`);
                if (!cartItem) {
                    console.error('Cart item element not found');
                    return;
                }

                // Update quantity input
                const quantityInput = cartItem.querySelector('.quantity-input');
                if (quantityInput) {
                    quantityInput.value = data.quantity;
                    quantityInput.max = Math.min(data.stock, 6);
                }

                // Update total price
                const totalElement = cartItem.querySelector('.product-price');
                    if (totalElement) {
                    totalElement.textContent = `₹${data.totalPrice.toLocaleString()}`;
                }

                // Update stock info
                const stockInfo = cartItem.querySelector('.stock-info small');
                if (stockInfo) {
                    if (data.stock <= 6) {
                        stockInfo.textContent = `Only ${data.stock} items available`;
                        stockInfo.className = 'text-warning';
                    } else {
                        stockInfo.textContent = 'Maximum 6 items allowed';
                        stockInfo.className = 'text-muted';
                    }
                }

                // Update cart summary
                document.getElementById('subtotal').textContent = `₹${data.cartTotal.toLocaleString()}`;
                document.getElementById('shipping').textContent = data.shipping === 0 ? 'Free' : `₹${data.shipping.toLocaleString()}`;
                document.getElementById('finalPrice').textContent = `₹${data.finalPrice.toLocaleString()}`;

                // Update button states
                const increaseBtn = cartItem.querySelector('.quantity-btn[onclick*="increase"]');
                const decreaseBtn = cartItem.querySelector('.quantity-btn[onclick*="decrease"]');
                
                if (increaseBtn) {
                    const maxAllowed = Math.min(data.stock, 6);
                    const shouldDisableIncrease = data.quantity >= maxAllowed;
                    increaseBtn.disabled = shouldDisableIncrease;
                    increaseBtn.style.opacity = shouldDisableIncrease ? '0.5' : '1';
                    increaseBtn.style.cursor = shouldDisableIncrease ? 'not-allowed' : 'pointer';
                }
                if (decreaseBtn) {
                    const shouldDisableDecrease = data.quantity <= 1;
                    decreaseBtn.disabled = shouldDisableDecrease;
                    decreaseBtn.style.opacity = shouldDisableDecrease ? '0.5' : '1';
                    decreaseBtn.style.cursor = shouldDisableDecrease ? 'not-allowed' : 'pointer';
                }

                showNotification('Quantity updated successfully', 'success');
            } catch (error) {
                console.error('Error updating quantity:', error);
                showNotification('An error occurred while updating quantity', 'error');
            }
        }

        function confirmRemove(event) {
            event.preventDefault();
            const form = event.target;
            
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3e4c22',
                cancelButtonColor: '#c82333',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
            
            return false;
        }

        async function applyCoupon() {
            const code = document.getElementById('couponCode').value.trim();
            if (!code) {
                showNotification('Please enter a coupon code', 'error');
                return;
            }

            try {
                const response = await fetch('/apply-coupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ code })
                });

                const data = await response.json();
                console.log('Coupon response:', data);

                if (data.success) {
                    showNotification(data.message, 'success');
                    
                    document.getElementById('subtotal').textContent = `₹${data.totals.subtotal.toFixed(2)}`;
                    document.getElementById('shipping').textContent = `₹${data.totals.shipping.toFixed(2)}`;
                    document.getElementById('finalPrice').textContent = `₹${data.totals.finalPrice.toFixed(2)}`;

                    let couponSection = document.querySelector('.applied-coupon');
                    if (!couponSection) {
                        couponSection = document.createElement('div');
                        couponSection.className = 'applied-coupon';
                        const subtotalRow = document.querySelector('.cart-summary-row:first-child');
                        subtotalRow.parentNode.insertBefore(couponSection, subtotalRow.nextSibling);
                    }

                    const discountAmount = data.totals.discount;
                    const discountText = data.coupon.discountType === 'percentage' 
                        ? `${data.coupon.discountValue}% off` 
                        : `₹${data.coupon.discountValue} off`;

                    couponSection.innerHTML = `
                        <div class="flex justify-between items-center">
                            <div class="flex items-center gap-2">
                                <span class="text-green-600 font-medium">Coupon Applied:</span>
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">${data.coupon.code}</span>
                                <span class="text-green-600">(${discountText})</span>
                            </div>
                            <button onclick="removeCoupon()" class="text-gray-500 hover:text-red-500 transition-colors">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="text-green-600 text-sm mt-1">
                            You saved: ₹${discountAmount.toFixed(2)}
                        </div>
                    `;

                    document.getElementById('couponCode').value = '';
                    document.getElementById('couponCode').disabled = true;
                    document.querySelector('button[onclick="applyCoupon()"]').disabled = true;
                } else {
                    showNotification(data.message, 'error');
                }
            } catch (error) {
                console.error('Error applying coupon:', error);
                showNotification('Error applying coupon', 'error');
            }
        }

        async function removeCoupon() {
            try {
                const result = await Swal.fire({
                    title: 'Remove Coupon',
                    text: 'Are you sure you want to remove this coupon?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3e4c22',
                    cancelButtonColor: '#c82333',
                    confirmButtonText: 'Yes, remove it!'
                });

                if (!result.isConfirmed) {
                    return;
                }

                const response = await fetch('/remove-coupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();
                console.log('Remove coupon response:', data);

                if (data.success) {
                    // Remove coupon section
                    const couponSection = document.querySelector('.applied-coupon');
                    if (couponSection) {
                        couponSection.remove();
                    }

                    // Update cart summary
                    document.getElementById('subtotal').textContent = `₹${data.totals.subtotal.toLocaleString()}`;
                    document.getElementById('shipping').textContent = data.totals.shipping === 0 ? 'Free' : `₹${data.totals.shipping.toLocaleString()}`;
                    document.getElementById('finalPrice').textContent = `₹${data.totals.finalPrice.toLocaleString()}`;

                    // Enable coupon input and apply button
                    document.getElementById('couponCode').disabled = false;
                    document.querySelector('button[onclick="applyCoupon()"]').disabled = false;

                    showNotification(data.message, 'success');
                } else {
                    showNotification(data.message || 'Failed to remove coupon', 'error');
                }
            } catch (error) {
                console.error('Error removing coupon:', error);
                showNotification('An error occurred while removing the coupon', 'error');
            }
        }

        async function removeItem(itemId) {
            try {
                const result = await Swal.fire({
                    title: 'Remove Item',
                    text: 'Are you sure you want to remove this item from your cart?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3e4c22',
                    cancelButtonColor: '#c82333',
                    confirmButtonText: 'Yes, remove it!'
                });

                if (!result.isConfirmed) {
                    return;
                }

                const response = await fetch('/cart/remove/${itemId}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ itemId })
                });

                const data = await response.json();
                console.log('Remove item response:', data);
                
                if (data.success) {
                    const cartItem = document.querySelector(`.cart-item[data-id="${itemId}"]`);
                    if (cartItem) {
                        cartItem.remove();
                    }

                    document.getElementById('subtotal').textContent = `₹${data.totals.subtotal.toLocaleString()}`;
                    document.getElementById('shipping').textContent = data.totals.shipping === 0 ? 'Free' : `₹${data.totals.shipping.toLocaleString()}`;
                    document.getElementById('finalPrice').textContent = `₹${data.totals.finalPrice.toLocaleString()}`;

                    const remainingItems = document.querySelectorAll('.cart-item');
                    if (remainingItems.length === 0) {
                        const cartContainer = document.querySelector('.col-lg-8');
                        cartContainer.innerHTML = `
                            <div class="empty-cart">
                                <i class="fas fa-shopping-cart empty-cart-icon"></i>
                                <h3 class="empty-cart-text">Your cart is empty</h3>
                                <p class="empty-cart-subtext">Looks like you haven't added any items to your cart yet.</p>
                                <a href="/shopAll" class="continue-shopping-btn">Continue Shopping</a>
                            </div>
                        `;
                    }

                    showNotification(data.message, 'success');
                } else {
                    showNotification(data.message || 'Failed to remove item', 'error');
                }
            } catch (error) {
                console.error('Error removing item:', error);
                showNotification('An error occurred while removing the item', 'error');
            }
        }

        function proceedToCheckout() {
            window.location.href = '/checkout';
        }

        function showNotification(message, type) {
            Toastify({
                text: message,
                duration: 3000,
                gravity: "top",
                position: "right",
                backgroundColor: type === 'success' ? '#4a6741' : '#e63946',
                stopOnFocus: true,
                style: {
                    fontFamily: "'Jost', sans-serif",
                    fontSize: "14px",
                    padding: "12px 20px",
                    borderRadius: "8px",
                    boxShadow: "0 4px 12px rgba(0,0,0,0.1)"
                }
            }).showToast();
        }

        function toggleCoupons() {
            const couponList = document.getElementById('couponList');
            const showBtn = document.querySelector('.show-coupons-btn');
            const showText = showBtn.querySelector('.show-text');
            
            if (couponList.style.display === 'none') {
                couponList.style.display = 'block';
                showText.textContent = 'Hide';
                showBtn.classList.add('active');
            } else {
                couponList.style.display = 'none';
                showText.textContent = 'Show All';
                showBtn.classList.remove('active');
            }
        }
    </script>
